---
const { count = 4 } = Astro.props;
---
<div class="flex flex-wrap gap-4 justify-center">
  {Array(count).fill(0).map(() => (
    <div class="flex items-center gap-2 bg-gray-100 bg-opacity-30 rounded-xl shadow-lg p-4 animate-pulse">
      <div class="h-12 w-12 bg-gray-300 rounded-full"></div>
      <div class="h-6 w-24 bg-gray-300 rounded"></div>
    </div>
  ))}
</div>

<style>
  .animate-pulse {
    animation: pulse 1.5s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }
</style>
